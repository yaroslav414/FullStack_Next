generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEXT_PUBLIC_DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @db.VarChar(100)
  email     String    @unique
  password  String
  isAdmin   Boolean   
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  comments  Comment[]
}

model Article {
  id        Int       @id @default(autoincrement())
  title     String    @db.VarChar(200)
  desc      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  comments  Comment[]
}

model Comment {
  id              Int      @id @default(autoincrement())
  text            String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  userId          Int
  articleId       Int
  userComments    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  articleComments Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
}
